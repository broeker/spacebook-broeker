---
layout: layouts/base.njk
section: home 
---

   <div class="flex align-text-top w-full mr-auto ml-auto md:space-x-12 px-6 md:px-6 lg:px-8 xl:px-12 justify-center flex-wrap-reverse mb-8 prose prose-sm sm:prose lg:prose-lg xl:prose-xl max-w-5xl"> 

          
        <div class="md:flex-1">
        
            <img class="rounded-lg shadow-none mt-0 pt-0 !important" src="_includes/assets/images/citizen2.jpg" alt="Citizen Tim" />
            <em><center><small>On the job, Berkelely, CA (2019)</small></center></em>
        </div>
        
        <div class="w-full md:flex-1 mt-8 md:mt-0 justify-start">
            <strong class="text-sm text-gray-500 mt-0 top-0 !important font-semibold">LATEST WRITING</strong>
            {% set latest_posts = collections.posts %}
            <ul class="w-full mt-0 pt-0 !important">
            {% for post in latest_posts.slice(0,3) | reverse %}
            <li><a href="{{ post.url}}">{{ post.data.title}}</a></li>
            {% endfor %}
            </ul>
            <hr class="block w-full md:hidden border-gray-100 dark:border-gray-600 mb-12" />
        </div>
    </div>

   <hr class="w-50 pr-8 pl-8 border-gray-100 dark:border-gray-600" />
 <div class="mt-12 flex align-text-top w-full mr-auto ml-auto space-x-12 px-6 md:px-6 lg:px-8 xl:px-12 justify-center flex-wrap-reverse mb-8 prose prose-sm sm:prose lg:prose-lg xl:prose-xl max-w-5xl"> 
        
        <div class="md:flex-1 rounded-lg">
           <strong class="text-sm text-gray-500 mt-0 top-0 !important">LINK BLOG</strong>
            <ul class="listing">
            {%- for item in sheet.Links -%}
                <li><small>{{ item.date }}</small> -- <a href="{{item.url}}" target="_blank noopener">{{ item.title }}</a></li>
            {%- endfor -%}
            </ul>
        </div>
        
        
    </div>
